.search {
    height: 60rpx;
    padding: 10rpx 20rpx;
    background: #F3F3F3;
    border-bottom: 1px solid #ccc;
}
.search input {
    position: relative;
    background: #fff;
    font-size: 22rpx;
    padding-left: 60rpx;
    height: 40rpx;
    margin-top: 4rpx;
}
.search icon {
    position: absolute;
    left: 40rpx;
    top: 30rpx;
}